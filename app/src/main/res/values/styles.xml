<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCornerRadius" parent="Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">11dp</item>
    </style>

    <style name="CheckBoxColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#8B9194</item> <!--未选中时的颜色-->
        <item name="colorControlActivated">#FF7B1A</item> <!--选中时的颜色-->
    </style>

    <style name="EdiTextColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/progressColor</item>
        <item name="colorControlActivated">@color/themeColor</item>
    </style>

    <style name="Picker" parent="Theme.AppCompat.Light">
        <item name="android:editTextColor">#FF7B1A</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/lineColor</item>
    </style>

</resources>